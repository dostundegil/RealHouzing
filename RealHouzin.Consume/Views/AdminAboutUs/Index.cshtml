@model UpdateAboutUsViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout/Index.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">Hakkımızda Sayfa Güncellemesi</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <input type="hidden" asp-for="AboutUsID" />
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Başlık</label>
                        <input type="text" asp-for="AboutUsTitle" class="form-control" id="basic-default-fullname" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">İçerik</label>
                        <textarea asp-for="AboutUsContent" class="form-control" rows="10" cols="10" id="basic-default-fullname" ></textarea>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-refresh"></span> Güncelle</button>
                <a href="/AdminDashboard/Index/" class="btn btn-danger"><span class="tf-icons bx bx-arrow-back"></span> Vazgeç </a>
            </form>
        </div>
    </div>
</div>