<script>
    document.querySelector("#messageForm").addEventListener("submit", function (e) {
        e.preventDefault(); // Formun normal submit işlemini engelle

        // Form gönderildikten sonra SweetAlert bildirimini görüntüle
        Swal.fire({
            title: "Mesaj Gönderilmiştir",
            text: "Mesajınız başarıyla gönderilmiştir.",
            icon: "success",
            showCancelButton: false,
            confirmButtonColor: "#3085d6",
            confirmButtonText: "Tamam"
        }).then((result) => {
            // SweetAlert bildirimi kapatıldıktan sonra formu gerçekleştir
            if (result.isConfirmed) {
                document.querySelector("#submitButton").disabled = true; // Gönderme düğmesini devre dışı bırak
                document.querySelector("#messageForm").submit(); // Formu gönder
            }
        });
    });
</script>
