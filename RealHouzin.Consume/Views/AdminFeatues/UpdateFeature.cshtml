@model UpdateFeatuesViewModel
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/_AdminLayout/Index.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">Özellik Güncelleme</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <input type="hidden" asp-for="FeatuesID"/>
                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="basic-default-fullname">Başlık</label>
                        <input type="text" asp-for="FeatuesTitle" class="form-control" id="basic-default-fullname" />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="basic-default-fullname">Resim Yolu</label>
                        <input type="text" asp-for="FeatuesImage" class="form-control" id="basic-default-fullname" />
                    </div>
                    <div class="mb-3 col-md-12">
                        <label class="form-label" for="basic-default-fullname">İçerik</label>
                        <input type="text" asp-for="FeatuesContent" class="form-control" id="basic-default-fullname" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-refresh"></span> Güncelle</button>
                <a href="/AdminDashboard/Index/" class="btn btn-danger"><span class="tf-icons bx bx-arrow-back"></span> Vazgeç </a>
            </form>
        </div>
    </div>
</div>

