@model UpdateContactUsViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/_AdminLayout/Index.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary">
            <h5 class="mb-0  text-white">İletişim Sayfa Güncellemesi</h5>
        </div>
        <div class="card-body mt-2">
            <form method="post">
                <div class="row">
                    <input type="hidden" asp-for="ContactUsID" />
                    <input type="hidden" asp-for="MapUrl" />
                    <div class="mb-3">
                        <label class="form-label" for="basic-default-fullname">Adres</label>
                        <input type="text" asp-for="Address" class="form-control" id="basic-default-fullname" />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="basic-default-fullname">Telefon Numarası 1</label>
                        <input type="text" asp-for="Telephone1" class="form-control" id="basic-default-fullname" />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="basic-default-fullname">Telefon Numarası 2</label>
                        <input type="text" asp-for="Telephone2" class="form-control"  id="basic-default-fullname" />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="basic-default-fullname">Mail</label>
                        <input type="text" asp-for="Mail" class="form-control"  id="basic-default-fullname" />
                    </div>
                    <div class="mb-3 col-md-6">
                        <label class="form-label" for="basic-default-fullname">Website</label>
                        <input type="text" asp-for="Website" class="form-control" rows="5" cols="10" id="basic-default-fullname" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary"><span class="tf-icons bx bx-refresh"></span> Güncelle</button>
                <a href="/AdminDashboard/Index/" class="btn btn-danger"><span class="tf-icons bx bx-arrow-back"></span> Vazgeç </a>
            </form>
        </div>
    </div>
</div>

